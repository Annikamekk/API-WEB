{% layout "server/layouts/base.liquid" %}

{% block content %}
<ul class="grid" id="photoContainer"> 
  {% for photo in photos %}
    <li>
      <!-- Dynamisch gegenereerde ID voor elke dialoog -->
      <dialog id="foto-{{ photo.id }}">
        <form class="moreDetails" id="moreDetailsOver" method="dialog">
          <button> x</button>
          <img src="{{ photo.urls.full }}" alt="{{ photo.alt_description }}" id="card__image">
          <a href="/users/{{ photo.user.username }}">
            <h2>{{ photo.user.name }}</h2>
          </a> 
          <p> üìç{{ photo.user.location }}</p>
          <p>{{ photo.alt_description }}</p>
          <p>likes: {{ photo.likes }}</p>
          <ul>
            <li></li>
          </ul>
        <div>
          <svg xmlns:xlink="http://www.w3.org/1999/xlink" xmlns="http://www.w3.org/2000/svg"
           class="PpK6d"  viewBox="0 0 24 24" version="1.1" aria-hidden="false" 
           style="flex-shrink: 0;"><desc lang="en-US" fill="#171616">A heart</desc>
           <path d="M21.424 4.594c-2.101-2.125-5.603-2.125-7.804 0l-1.601 1.619-1.601-1.62c-2.101-2.124-5.603-2.124-7.804 0-2.202 2.126-2.102 5.668 0 7.894L12.019 22l9.405-9.513a5.73 5.73 0 0 0 0-7.893Z" fill="#171616"></path></svg></div>
        </form>
      </dialog>
      
      <!-- Button om het dialoogvenster te openen -->
      <button onclick="document.getElementById('foto-{{ photo.id }}').showModal()">
        <img src="{{ photo.urls.regular}}" alt="{{ photo.alt_description }}" id="card__image">
      </button>
    </li>
  {% endfor %}
</ul>

